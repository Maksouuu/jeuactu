{% extends 'base.html.twig' %}

{% block title %}HistoireEnLigne - Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_comment_new', {'id': article.id}) }}" class="btn btn-primary" role="button">Ajouter un commentaire</a>
        <a  href="https://twitter.com/intent/tweet?text={{ article.title|url_encode }}                                                         {{ article.content|url_encode }}" class="btn btn-primary" role="button">Twitter</a>
        <a href="https://www.facebook.com/sharer/sharer.php?u={{ article.title|url_encode }}                                                         {{ article.content|url_encode }}" class="btn btn-primary" role="button">Facebook</a>
    </div>

    <div class="mt-3">
        {% for comment in comments %}
            <div class="text-primary mt-3 ">
                {{ comment.createdAt ? comment.createdAt|date('Y/m/d Ã  H:i') : '' }}
                {{ comment.user.email }} a dit :</div>
            <div >{{ comment.content }}</div>
        {% endfor %}
    </div>

{% endblock %}
