{% extends 'base.html.twig' %}

{% block title %}Article{% endblock %}

{% block body %}
    <h1>Article</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Titre</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ article.content }}</td>
            </tr>
        </tbody>
    </table>

    <div>
        <a href="{{ path('app_comment_new', {'id': article.id}) }}" class="btn btn-primary" role="button">Ajouter un commentaire</a>
    </div>

    <div>
        {% for comment in comments %}
            <div>{{ comment.user.email }} a dit : </div>
            <div>{{ comment.content }}</div>
        {% endfor %}
    </div>

{% endblock %}
