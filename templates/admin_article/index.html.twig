{% extends 'base.html.twig' %}

{% block title %}HistoireEnLigne - Admin Article{% endblock %}

{% block body %}
    <h1>Articles</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>
                    <a class = "btn btn-primary" href="{{ path('app_admin_article_show', {'id': article.id}) }}">Voir le contenu</a>
                    <a class = "btn btn-primary" href="{{ path('app_admin_article_edit', {'id': article.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Auncun résultat disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class = "btn btn-primary" href="{{ path('app_admin_article_new') }}">Crée un article</a>
{% endblock %}
