{% extends 'base.html.twig' %}

{% block title %}Comment{% endblock %}

{% block body %}
    <h1>Comment</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ comment.id }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ comment.content }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <div class="mb-3">
    <a class ='btn btn-primary' href="{{ path('app_admin_comment_index') }}">Revenir à la liste</a>
    </div>
    <div class="mb-3">
    <a class ='btn btn-primary' href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}">Modifier</a>
    </div>
    {{ include('admin_comment/_delete_form.html.twig') }}
{% endblock %}
