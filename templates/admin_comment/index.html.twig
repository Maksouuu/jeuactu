{% extends 'base.html.twig' %}

{% block title %}HistoireEnLigne - Admin commentaire{% endblock %}

{% block body %}
    <h1>Commentaires</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Contenu</th>
                <th>Crée le</th>
            </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.content }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_admin_comment_show', {'id': comment.id}) }}">Afficher</a>
                    <a class="btn btn-primary" href="{{ path('app_admin_comment_edit', {'id': comment.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">Auncun commentaire disponible</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_comment_new') }}">Crée un nouveau commentaire</a>
{% endblock %}
